<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="@dimen/grid1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/text_temp_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:textSize="16sp"
            android:layout_marginRight="@dimen/grid1"
            android:text="100"/>

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/text_temp_low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:textSize="16sp"
            android:text="500"/>
    </LinearLayout>

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/text_display_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:textSize="16sp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="The time or date"/>

    <ImageView
        android:id="@+id/image_forecast"
        android:layout_width="@dimen/grid3"
        android:layout_height="@dimen/grid3"
        android:layout_centerInParent="true"
        android:src="@drawable/common_google_signin_btn_icon_light"/>
</RelativeLayout>
